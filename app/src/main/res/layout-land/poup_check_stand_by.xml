<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="5dp"
    android:layout_height="wrap_content"
    android:background="#008577"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/check_stand_by_Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lab"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:gravity="right|center"
            android:text="Save"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/closecheckstandby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/colorpart"
            android:gravity="right|center"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:background="@drawable/lab_white"
            android:text="Back"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:background="@drawable/broderw"
                        android:paddingVertical="5dp"
                        android:paddingLeft="20dp"
                        android:text="WO NO"
                        android:textColor="#94F5FA" />

                    <TextView
                        android:id="@+id/p_productNo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:background="@drawable/broderw"
                        android:paddingVertical="5dp"
                        android:paddingLeft="20dp"
                        android:text="W00000000001"
                        android:textColor="#fff" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:background="@drawable/broderw"
                        android:paddingVertical="5dp"
                        android:paddingLeft="20dp"
                        android:text="Date"
                        android:textColor="#94F5FA" />

                    <TextView
                        android:id="@+id/p_Date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:background="@drawable/broderw"
                        android:paddingVertical="5dp"
                        android:paddingLeft="20dp"
                        android:text="W00000000001"
                        android:textColor="#fff" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:background="@drawable/broderw"
                        android:paddingVertical="5dp"
                        android:paddingLeft="20dp"
                        android:text="Process"
                        android:textColor="#94F5FA" />

                    <TextView
                        android:id="@+id/p_process"
                        android:layout_width="match_parent"
                        android:background="@drawable/broderw"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:paddingVertical="5dp"
                        android:paddingLeft="20dp"
                        android:text="W0000000003"
                        android:textColor="#fff" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="5dp"
                        android:text="1. Material"
                        android:textColor="#CDDC39" />

                    <TextView
                        android:id="@+id/Material_slick"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right|center"
                        android:drawableRight="@drawable/ic_arrow"
                        android:gravity="center|right"
                        android:layout_marginRight="20dp"
                        android:text="Chon"
                        android:textColor="#CDDC39" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/aaa"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:background="@drawable/boder_b_t"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:drawableRight="@drawable/ic_topdown"
                                    android:gravity="center"
                                    android:text="Process"
                                    android:textColor="#94F5FA" />

                                <TextView
                                    android:layout_width="200dp"
                                    android:layout_height="match_parent"
                                    android:drawableRight="@drawable/ic_topdown"
                                    android:gravity="center"
                                    android:text="Material"
                                    android:textColor="#94F5FA" />

                                <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent"
                                    android:drawableRight="@drawable/ic_topdown"
                                    android:gravity="center"
                                    android:text="Width"
                                    android:textColor="#94F5FA" />

                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_height="match_parent"
                                    android:drawableRight="@drawable/ic_topdown"
                                    android:gravity="center"
                                    android:text="Need Qty"
                                    android:textColor="#94F5FA" />

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:drawableRight="@drawable/ic_topdown"
                                    android:gravity="center"
                                    android:text="Feeding"
                                    android:textColor="#94F5FA" />

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"

                                    android:drawableRight="@drawable/ic_topdown"
                                    android:gravity="center"
                                    android:text="Unit"
                                    android:textColor="#94F5FA" />

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="Division"
                                    android:textColor="#94F5FA" />
                            </LinearLayout>

                            <ListView
                                android:id="@+id/lvMaterial"
                                android:listSelector="#4a94F5FA"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/aaa" />
                        </RelativeLayout>

                    </HorizontalScrollView>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="5dp"
                        android:text="2. Tools"
                        android:textColor="#CDDC39" />

                    <TextView
                        android:id="@+id/Tools_slick"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:gravity="center|right"
                        android:text="Chon"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="20dp"
                        android:drawableRight="@drawable/ic_arrow"
                        android:textColor="#CDDC39"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/qwwq"
                                android:background="@drawable/boder_b_t"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:drawableRight="@drawable/ic_topdown"
                                    android:gravity="center"
                                    android:text="Process"
                                    android:textColor="#94F5FA" />

                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="match_parent"
                                    android:drawableRight="@drawable/ic_topdown"
                                    android:gravity="center"
                                    android:text="Machine Type"
                                    android:textColor="#94F5FA" />

                                <TextView
                                    android:layout_width="150dp"
                                    android:layout_height="match_parent"
                                    android:drawableRight="@drawable/ic_topdown"
                                    android:gravity="center"
                                    android:text="Machine Code"
                                    android:textColor="#94F5FA" />

                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="match_parent"
                                    android:drawableRight="@drawable/ic_topdown"
                                    android:gravity="center"
                                    android:text="Start Date"
                                    android:textColor="#94F5FA" />

                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="End Date"
                                    android:textColor="#94F5FA" />
                            </LinearLayout>

                            <ListView
                                android:id="@+id/lvTool"
                                android:layout_width="match_parent"
                                android:listSelector="#4a94F5FA"
                                android:layout_height="match_parent"
                                android:layout_below="@id/qwwq" />
                        </RelativeLayout>

                    </HorizontalScrollView>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="5dp"
                        android:text="3. Staff"
                        android:textColor="#CDDC39" />

                    <TextView
                        android:id="@+id/Staff_slick"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center|right"
                        android:text="Chon"
                        android:drawableRight="@drawable/ic_arrow"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:textColor="#CDDC39"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/boder_b_t"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/ewqq"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="100dp"
                                    android:layout_height="match_parent"
                                    android:drawableRight="@drawable/ic_topdown"
                                    android:gravity="center"
                                    android:text="Process"
                                    android:textColor="#94F5FA" />

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:drawableRight="@drawable/ic_topdown"
                                    android:gravity="center"
                                    android:text="Staff ID"
                                    android:textColor="#94F5FA" />

                                <TextView
                                    android:layout_width="180dp"
                                    android:layout_height="match_parent"
                                    android:drawableRight="@drawable/ic_topdown"
                                    android:gravity="center"
                                    android:text="Name"
                                    android:textColor="#94F5FA" />

                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="match_parent"
                                    android:drawableRight="@drawable/ic_topdown"
                                    android:gravity="center"
                                    android:text="Type"
                                    android:textColor="#94F5FA" />

                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="match_parent"
                                    android:drawableRight="@drawable/ic_topdown"
                                    android:gravity="center"
                                    android:text="Start Date"
                                    android:textColor="#94F5FA" />

                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="End Date"
                                    android:textColor="#94F5FA" />
                            </LinearLayout>

                            <ListView
                                android:id="@+id/lvStaff"
                                android:listSelector="#4a94F5FA"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_below="@+id/ewqq" />
                        </RelativeLayout>

                    </HorizontalScrollView>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>