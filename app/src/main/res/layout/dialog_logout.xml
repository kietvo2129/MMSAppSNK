<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#D906355F">

    <TextView
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert data!"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/TxtActual"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#fff"
        android:textColorHint="#4AFFFFFF"
        android:gravity="center"
        android:background="@drawable/broderw"
        android:ems="10"
        android:hint="insert data here"
        android:inputType="number" />

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <Button
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/vientrangdangnhap"
            android:layout_marginLeft="20dp"
            android:textColor="#fff"
            android:text="NO" />

        <Button
            android:id="@+id/yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#fff"
            android:background="@drawable/vientrangnenxanhdangnhap"
            android:text="YES" />
    </LinearLayout>
</LinearLayout>