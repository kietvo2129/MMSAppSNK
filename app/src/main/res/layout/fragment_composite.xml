<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    android:orientation="vertical"
    tools:context=".MainLayout">

    <LinearLayout
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/boder_b_t"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:weightSum="9">

        <TextView
            android:id="@+id/actual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:drawableEnd="@drawable/ic_topdown"
            android:gravity="center"
            android:padding="0dp"
            android:text="WO"
            android:textColor="#94F5FA" />

        <TextView
            android:id="@+id/actual5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:drawableEnd="@drawable/ic_topdown"
            android:gravity="center"
            android:padding="0dp"
            android:text="Routing"
            android:textAlignment="center"
            android:textColor="#94F5FA" />

        <TextView
            android:id="@+id/actual6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="0dp"
            android:text="Factory"
            android:textAlignment="center"
            android:textColor="#94F5FA" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/t2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:padding="0dp"
        android:weightSum="9">

        <Spinner
            android:id="@+id/spinnerWO"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:background="#00000000" />

        <Spinner
            android:id="@+id/spinnerRounting"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:background="#00000000" />

        <Spinner
            android:id="@+id/spinnerPro"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:background="#00000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/t3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t2"
        android:layout_marginHorizontal="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/boder_b_t"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:weightSum="9">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:drawableEnd="@drawable/ic_topdown"
            android:gravity="center"
            android:padding="0dp"
            android:text="Date"
            android:textColor="#94F5FA" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:drawableEnd="@drawable/ic_topdown"
            android:gravity="center"
            android:padding="0dp"
            android:text="Group Qty"
            android:textAlignment="center"
            android:textColor="#94F5FA" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="0dp"
            android:text="QR Qty"
            android:textAlignment="center"
            android:textColor="#94F5FA" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/t4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t3"
        android:layout_marginHorizontal="4dp"
        android:background="@drawable/boder_botton"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:weightSum="9">

        <Spinner
            android:id="@+id/spinnerDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#00000000"
            android:backgroundTint="#fff" />

        <EditText
            android:id="@+id/GroupQty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"

            android:backgroundTint="#fff"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#fff" />

        <EditText
            android:id="@+id/QRQty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:backgroundTint="#fff"
            android:gravity="center"
            android:inputType="number"
            android:textColor="#fff" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/t7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t4"
        android:layout_marginHorizontal="4dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/buttonCreating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:background="@drawable/lab"
            android:textStyle="bold"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:text="Creating"
            android:layout_margin="8dp"
            android:elevation="4dp"

            android:textColor="#fff" />
        <TextView
            android:layout_margin="8dp"
            android:id="@+id/buttonPrint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/lab"
            android:gravity="center"
            android:textStyle="bold"
            android:elevation="4dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:text="Printing"
            android:textColor="#fff" />

    </LinearLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/t7"
        android:layout_marginHorizontal="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/kkk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boder_b_t"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_topdown"
                    android:gravity="center"
                    android:text="Lot Code"
                    android:textColor="#94F5FA" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Qty"
                    android:textColor="#94F5FA" />

            </LinearLayout>

            <ListView
                android:id="@+id/lvDanhSanhproduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kkk"
                android:layout_marginTop="4dp"
                android:listSelector="#4a94F5FA"
                tools:listitem="@layout/item_product" />
        </RelativeLayout>

    </HorizontalScrollView>

</RelativeLayout>