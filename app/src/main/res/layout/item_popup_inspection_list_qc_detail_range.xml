<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#008577"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#fff"/>
        <LinearLayout
            android:paddingVertical="8dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvmin_value"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:textColor="#fff"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_marginVertical="2dp"
                android:layout_width="3dp"
                android:background="#94F5FA"
                android:layout_height="match_parent"
                />
            <EditText
                android:id="@+id/giatriIP"
                android:inputType="number"
                android:layout_weight="1"
                android:textColor="#fff"
                android:hint="input data"
                android:layout_marginHorizontal="8dp"
                android:textColorHint="#DACACA"
                android:background="@drawable/boder_top_button"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>
            <TextView
                android:layout_marginVertical="2dp"
                android:layout_width="3dp"
                android:background="#94F5FA"
                android:layout_height="match_parent"
                />
            <TextView
                android:id="@+id/tvmax_value"
                android:layout_marginRight="8dp"
                android:gravity="right"
                android:layout_weight="1"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#fff"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <android.support.constraint.ConstraintLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvActualCong"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:paddingTop="10dp"
                    android:textColor="#fff"
                    android:text="Pass"
                    android:textAlignment="center"
                    android:textSize="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    tools:layout_editor_absoluteX="65dp" />

                <TextView
                    android:id="@+id/tvActual"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="36dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/vientrangnenxanhdangnhap"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:padding="4dp"
                    android:text="000"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvActualCong"
                    app:layout_constraintEnd_toEndOf="@+id/tvActualCong"
                    app:layout_constraintHorizontal_bias="0.522"
                    app:layout_constraintStart_toStartOf="@+id/tvActualCong" />
            </android.support.constraint.ConstraintLayout>
            <TextView
                android:layout_marginVertical="12dp"
                android:layout_width="3dp"
                android:background="#94F5FA"
                android:layout_height="match_parent"
                />
            <TextView
                android:layout_weight="2"
                android:id="@+id/tvActualtru"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center"
                android:textColor="#fff"
                android:text="-"
                android:textAlignment="center"
                android:textSize="50dp" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#fff"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
            <android.support.constraint.ConstraintLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvDefectiveCong"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:textColor="#fff"
                    android:text="Defective"
                    android:textAlignment="center"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/tvDefective"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="36dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/vientrangnenxanhdangnhap"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:padding="4dp"
                    android:text="000"
                    android:textSize="30sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvDefectiveCong"
                    app:layout_constraintEnd_toEndOf="@+id/tvDefectiveCong"
                    app:layout_constraintStart_toStartOf="parent" />
            </android.support.constraint.ConstraintLayout>
            <TextView
                android:layout_marginVertical="12dp"
                android:layout_width="3dp"
                android:background="#94F5FA"
                android:layout_height="match_parent"
                />
            <TextView
                android:layout_weight="2"
                android:id="@+id/tvDefectiveTru"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:gravity="center"
                android:text="-"
                android:textAlignment="center"
                android:textSize="50dp" />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#fff"/>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#1637DD"
        app:backgroundTint="@color/cardview_shadow_end_color"
        app:elevation="0dp"
        app:srcCompat="@drawable/ic_save"
        tools:ignore="VectorDrawableCompat" />
</RelativeLayout>