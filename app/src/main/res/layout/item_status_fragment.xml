<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/colorBackGround"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/st_noplan"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="3dp">

        <android.support.v7.widget.CardView
            android:id="@+id/backg"
            app:cardBackgroundColor="#123344"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp">

            <RelativeLayout


                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingVertical="5dp"
                    android:text="CUT001 [ LN00442-P001 ]"
                    android:textColor="@color/white"></TextView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title1"
                    android:background="@drawable/item_st_3">

                    <TextView
                        android:id="@+id/tv_title2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingVertical="5dp"
                        android:text="LJ63-16214A"
                        android:textColor="@color/white"></TextView>

                    <LinearLayout
                        android:id="@+id/h3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_title2"
                        android:background="@drawable/item_st_1">

                        <TextView
                            android:id="@+id/tv_target"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical|center"
                            android:text="5555"
                            android:paddingVertical="10dp"
                            android:textColor="@color/white"></TextView>

                        <TextView
                            android:id="@+id/tv_actual"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/item_st_2"
                            android:gravity="center_vertical|center"
                            android:paddingVertical="10dp"
                            android:text="3332"
                            android:textColor="@color/white"></TextView>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_title4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/h3"
                        android:gravity="center_horizontal"
                        android:paddingVertical="5dp"
                        android:text="LJ63-16214A"
                        android:textColor="@color/white"></TextView>

                </RelativeLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </RelativeLayout>
</android.support.v7.widget.CardView>