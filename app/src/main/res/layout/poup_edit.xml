<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="@android:dimen/thumbnail_width"
    android:layout_width="300dp"
    android:background="#1C97AD"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:background="#282828"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="25sp"
            android:maxLines="1"
            android:gravity="center"
            android:text="Modified notice"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:paddingLeft="20dp"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/checkall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:buttonTint="#fff"
            android:layout_weight="1"
            android:text="ALL"></RadioButton>

        <!--        <RadioButton-->
        <!--            android:id="@+id/checkmms_create"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_weight="1"-->
        <!--            android:text="MMS"></RadioButton>-->

        <RadioButton
            android:id="@+id/checkmms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#fff"
            android:textColor="#fff"
            android:layout_weight="1"
            android:text="MMS"></RadioButton>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Title: "
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbt"/>

            <EditText
                android:textSize="18sp"
                android:layout_marginHorizontal="10dp"
                android:hint="title"
                android:textColor="#fff"
                android:backgroundTint="#fff"
                android:inputType="text"
                android:textColorHint="#70FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edittextTitle"/>

            <TextView
                android:text="Content "
                android:textSize="16sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbc"/>

            <EditText
                android:textSize="18sp"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/edittextContext"
                android:textColor="#fff"
                android:textColorHint="#70FFFFFF"
                android:hint="context"
                android:backgroundTint="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:inputType="textCapSentences|textNoSuggestions|textMultiLine" />

        </LinearLayout>
    </ScrollView>




    <LinearLayout
        android:weightSum="3"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="#282828"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:text="SAVE"
            android:id="@+id/buttonEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:id="@+id/buttonCancel"
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>