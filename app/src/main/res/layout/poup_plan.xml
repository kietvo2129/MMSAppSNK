<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:minHeight="400dp"
    android:padding="10dp"
    android:background="#008577"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/closeplan"
            android:text="* Please select a date to view specific plans"
            android:textColor="#fff"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/closeplan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:background="@drawable/lab_white"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"
            android:text="Close"
            android:textColor="@color/colorpart" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/boder_b_t"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="WO NO"

            android:paddingLeft="20dp"
            android:gravity="center|left"
            android:textColor="#94F5FA"/>
        <TextView
            android:id="@+id/productNo"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center|left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="W00000000001"
            android:paddingLeft="20dp"

            android:textColor="#fff"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:text="Product Code"
            android:gravity="center|left"
            android:textColor="#94F5FA"/>
        <TextView
            android:id="@+id/productCode"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="W00000000001"
            android:gravity="center|left"
            android:paddingLeft="20dp"
            android:textColor="#fff"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@drawable/boder_b_t"
        android:weightSum="2">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Product Name"
            android:paddingLeft="20dp"
            android:gravity="center|left"

            android:textColor="#94F5FA"/>
        <TextView
            android:id="@+id/productName"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="W0000000003"
            android:gravity="center|left"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingLeft="20dp"

            android:textColor="#fff"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="@drawable/boder_b_t"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="Date"
            android:gravity="center"
            android:drawableRight="@drawable/ic_topdown"
            android:textColor="#94F5FA"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:text="Process"
            android:gravity="center"
            android:drawableRight="@drawable/ic_topdown"
            android:textColor="#94F5FA"/>
        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="Target"
            android:gravity="center"
            android:textColor="#94F5FA"/>

    </LinearLayout>
    <ListView
        android:id="@+id/lvplan"
        android:listSelector="#4a94F5FA"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>