<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorpart"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header_p_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#282828">

            <TextView
                android:id="@+id/lbl_info_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/img_close_check_check"
                android:text="Check"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#FFF"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_close_check_check"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:layout_margin="8dp"
                android:src="@drawable/ic_close" />

            <Button
                android:id="@+id/btn_check_save_ck"
                android:background="#1BB68A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:text="Save"
                android:textAllCaps="false" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/header_p_2"
            android:background="@drawable/box_location_white"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_p_1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="4dp"
                    android:text="PL No"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/tv_qcheck_mlno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:padding="4dp"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="4dp"
                        android:text="Date"

                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/tv_qcheck_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:hint="yyyy-mm-dd"
                        android:padding="4dp"

                        android:textColor="#ffffff" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="Group Qty"
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/tv_qc_group_qty"
                        android:gravity="center"
                        android:text="0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:hint=""
                        android:padding="4dp"

                        android:textColor="#ffffff" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:padding="4dp"
                        android:text="Check Qty"

                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/tv_qcheck_defectqty"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:hint=""
                        android:padding="4dp"
                        android:text=""

                        android:textColor="#ffffff" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


        <RelativeLayout
            android:layout_marginHorizontal="5dp"
            android:layout_below="@+id/header_p_2"
            android:id="@+id/L1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackGround"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/textView_sub_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:text="OK"
                android:textColor="#fff" />


            <TextView
                android:id="@+id/textView_food_1"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/num_u_d1"
                android:background="@drawable/box_location_white"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLines="1"
                android:padding="8dp"
                android:text=""
                android:textColor="#fff" />

            <LinearLayout
                android:id="@+id/num_u_d1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imgButton_up1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_upward" />

                <ImageButton
                    android:id="@+id/imgButton_down1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_downward" />


            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginHorizontal="5dp"
            android:layout_below="@+id/L1"
            android:layout_marginVertical="10dp"
            android:id="@+id/L11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackGround"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                android:text="Defective"
                android:textColor="#fff" />


            <TextView
                android:id="@+id/textView_food_2"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@+id/num_u_d2"
                android:background="@drawable/box_location_white"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLines="1"
                android:padding="8dp"
                android:text=""
                android:textColor="#fff" />

            <LinearLayout
                android:id="@+id/num_u_d2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imgButton_up2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_upward" />

                <ImageButton
                    android:id="@+id/imgButton_down2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_downward" />


            </LinearLayout>
        </RelativeLayout>

